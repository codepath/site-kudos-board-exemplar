{
  "compilerOptions": {
    "target": "ES2021",
    "types":["node"],
    "module": "commonjs",
    "outDir": "./dist", 
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  }
}
